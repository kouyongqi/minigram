/* pages/login/login.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f7fa;
  padding-top: constant(safe-area-inset-top);
  padding-top: env(safe-area-inset-top);
}

/* 导航栏 */
.nav-bar {
  display: flex;
  align-items: center;
  padding: 12px 16px;
  background-color: #ffffff;
  border-bottom: 1px solid #f0f0f0;
}

.nav-left {
  padding: 8px;
}

.nav-icon {
  font-size: 20px;
  color: #374151;
}

.nav-title {
  flex: 1;
  text-align: center;
  font-size: 18px;
  font-weight: 500;
}

/* 登录内容区 */
.login-content {
  padding: 40px 20px;
}

/* Logo区域 */
.logo-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40px;
}

.app-logo {
  width: 80px;
  height: 80px;
  margin-bottom: 12px;
}

.app-name {
  font-size: 24px;
  font-weight: 500;
  color: #374151;
}

/* 登录区域 */
.login-section {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.login-tips {
  font-size: 14px;
  color: #6b7280;
  margin-bottom: 32px;
}

/* 按钮样式 */
.wechat-btn, .phone-btn {
  width: 80%;
  padding: 12px 0;
  border-radius: 24px;
  font-size: 16px;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 16px;
  border: none;
}

.wechat-btn {
  background-color: #07c160;
  color: white;
}

.phone-btn {
  background-color: #3b82f6;
  color: white;
}

.wechat-btn::after, .phone-btn::after {
  border: none;
}

.wechat-btn-icon, .phone-btn-icon {
  margin-right: 8px;
  font-size: 18px;
}

/* 协议区域 */
.agreement {
  margin-top: 24px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 12px;
}

.agreement checkbox {
  transform: scale(0.8);
  margin-right: 4px;
}

.agreement-text {
  color: #6b7280;
}

.agreement-link {
  color: #3b82f6;
} 